@page "/Aerolineas"

<AuthorizeView Roles= "Administrador">

    <Authorized Context="AuthenticationState">
        <h3>Lista de Vuelos</h3>
        <div class="for-group-row">
            <div class="col-sm-10">
                <a href="/Aerolineas/Nuevo" class="btn btn-primary m-1">Nuevo Vuelo</a>
            </div>

        </div>

        @if (listaAerolinea == null)
        {
            <p>No existen vuelos en el sistema</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Código del vuelo</th>
                        <th>Fecha y Hora</th>
                        <th>Origen</th>
                        <th>Destino</th>
                        <th>Avión</th>
                        <th>Cantidad de pasajeros</th>
                        <th>Piloto</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aerolinea in listaAerolinea)
                    {
                        <tr>
                            <td>@aerolinea.Codigo</td>
                            <td>@aerolinea.Fecha</td>
                            <td>@aerolinea.Origen</td>
                            <td>@aerolinea.Destino</td>
                            <td>@aerolinea.Avion</td>
                            <td>@aerolinea.Cantidad</td>
                            <td>@aerolinea.Piloto</td>                           
                           <th>
                               <a class="btn btn-success" href="@($"/Aerolineas/Editar/{aerolinea.Codigo}")">Editar</a>        
                           </th>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>

</AuthorizeView>



 <AuthorizeView Roles= "Usuario">

    <Authorized Context="AuthenticationState">
        <h3>Próximos Vuelos</h3>
        

        @if (listaAerolinea == null)
        {
            <p>No existen vuelos en el sistema</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Código del vuelo</th>
                        <th>Fecha y Hora</th>                       
                        <th>Destino</th>
                        <th>Avión</th>  
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aerolinea in listaAerolinea)
                    {
                        <tr>
                            <td>@aerolinea.Codigo</td>
                            <td>@aerolinea.Fecha</td>                          
                            <td>@aerolinea.Destino</td>
                            <td>@aerolinea.Avion</td>                                                     
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>

</AuthorizeView>